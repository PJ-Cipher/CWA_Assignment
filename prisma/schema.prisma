generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GameSession {
  id         Int      @id @default(autoincrement())
  player     String
  stage      Int      @default(1)
  score      Int      @default(0)
  completed  Boolean  @default(false)
  createdAt  DateTime @default(now())
}

